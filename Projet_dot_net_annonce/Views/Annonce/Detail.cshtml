@{
    Layout = "_Layout - Copier.cshtml";
}
<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        <h3 class="my-3">Les Details d'annonce de categroie @Model.Categorie.Name</h3>
        
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.Image" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">@Model.Titre</h3>
            <p>@Model.Description</p>
            <h3 class="my-3"> Date de publications </h3>
            <ul>
                <li>@Model.DateAnnonce</li>
                <li>Prix : @Model.Prix</li>
                
            </ul>
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
 
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
