@model IEnumerable<Annonce>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

    Layout = "_Layout - Copier.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>

            <th scope="col">Id</th>
            <th scope="col">Titre</th>
            <th scope="col">Categorie</th>
            <th scope="col">Description</th>
            <th scope="col">Prix</th>
            <th scope="col">Date</th>
            
            <th></th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Etat == false)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                <td>@item.Titre</td>
                <td>@item.Categorie</td>
                <td>@item.Description</td>
                <td>@item.Prix</td>
                <td>@item.DateAnnonce</td>
              
                <td>

                        <a asp-controller="Annonce" asp-action="Publier" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Publier</a>
                </td>

            </tr>
            }
        }
    </tbody>
</table>

         