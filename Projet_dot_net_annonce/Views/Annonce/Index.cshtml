@model IEnumerable<Annonce>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout - Copier.cshtml";
}

<div class="album py-5 bg-body-tertiary">
    
    <div class="container">
       
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            
            @foreach (var item in Model)
            {
                if (item.Etat == true)
                {
                    <div class="col-md-4">
                        <div class="card mb-4  box-shadow">
                    <img class="card-img-top" src="@item.Image" width="100%" height="255" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Titre</p>
                            <p class="card-text">@item.Description</p>
                       
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Annonce" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detail</a>
                                    <a asp-controller="Annonce" asp-action="Edit" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="Annonce" asp-action="Delet" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Supprimer</a>
                                </div>
                                <small class="text-body-secondary">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>

                }
            }



        </div>
    </div>
</div>
